{
  "name": "main",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "workspaceMount": "source=${localWorkspaceFolder}/,target=/workspace/repos/repo-template/,type=bind",
  "workspaceFolder": "/workspace",
  "runArgs": [
    "--network=host"
    // "--cap-add=NET_RAW",
    // "--cap-add=NET_ADMIN"
  ],
  "initializeCommand": [
    "docker",
    "pull",
    "ghcr.io/whiterabbit7516/devcontainers/devenv-main-amd64:latest"
  ],
  "postCreateCommand": "/usr/bin/pwsh -nop -nol -f /devcontainer/build/scripts/postCreate.ps1",
  "postAttachCommand": "/usr/bin/pwsh -nop -nol -f /devcontainer/build/scripts/postAttach.ps1",
  "containerEnv": {
    "DOCKER_HOST": "unix:///var/run/docker-host.sock"
  },
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "window.title": "${rootName}${separator}${profileName}",
        "window.titleSeparator": " | ",
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "terminal.integrated.profiles.linux": {
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          },
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell",
            "args": [
              "-nol"
            ]
          }
        },
        "omnisharp.autoStart": false,
        "dotfiles.repository": "https://github.com/whiterabbit7516/dotfiles.git",
        "dotfiles.installCommand": "install.ps1"
      },
      "extensions": [
        "vscodevim.vim",
        "alefragnani.bookmarks",
        "eamodio.gitlens"
      ]
    }
  },
  "mounts": [
    // "source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind,consistency=cached",
    // "source=${localEnv:HOME}/.kube,target=/root/.kube,type=bind,consistency=cached",
    // "source=${localWorkspaceFolder}/../../../repo-other,target=/workspace/repos/repo-other,type=bind",
    // "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
  ]
}
